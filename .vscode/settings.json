{
  "diffEditor.ignoreTrimWhitespace": false,
  
  "editor.fontFamily": "MeiryoKe_Gothic, 'Ricty Diminished', 'Courier New', Courier, Monaco, Menlo, Consolas, monospace",
  "editor.fontSize": 14,
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "all",
  "editor.scrollBeyondLastLine": false,
  "editor.tabSize": 2,
  "editor.trimAutoWhitespace": false,
  
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
  
  "workbench.colorTheme": "my-flatland-monokai",
  "workbench.startupEditor": "newUntitledFile",
  
  "html.autoClosingTags": false,
  "html.format.extraLiners": "",
  "html.format.indentInnerHtml": true,
  
  "css.lint.duplicateProperties": "warning",
  "css.lint.zeroUnits": "warning",
  "scss.lint.duplicateProperties": "warning",
  "scss.lint.zeroUnits": "warning",
  
  "path-intellisense.absolutePathToWorkspace": false,
  
  "tslint.autoFixOnSave": true,
  
  // 検索時に除外するパス
  "search.exclude": {
    "**/node_modules": true
  },
  
  // Beautify 拡張機能 : HTML・CSS・SCSS・JS・JSON のフォーマット設定
  "beautify.language": {
    "js": {
      "type": ["json"],
      "filename": [".jsbeautifyrc"]
    },
    "css": ["css", "scss"],
    "html": ["htm", "html"]
  },
  // Beautify 拡張機能を無効にするファイル
  "beautify.ignore": [],
  
  "//": "//"
}
